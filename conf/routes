# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# Client routes
GET     /read                    controllers.ClientController.read
POST    /register                controllers.RegistrationController.register
DELETE  /delete-client           controllers.ClientController.deleteClient
POST    /login                   service.LoginService.login
PATCH   /update-name             controllers.ClientController.updateName
PATCH   /update-property         controllers.ClientController.updateProperty

# Agent routes
PATCH   /add-agent               controllers.ClientController.addAgent
POST    /read-all-agent          controllers.ClientController.readAllAgent
PATCH   /remove-agent            controllers.ClientController.removeAgent

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
